# CRISP Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# Authentication (required)
# ===========================================

# JWT Secret - minimum 32 characters, used to sign tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-minimum-32-characters-long

# API Key for authentication
# Generate with: openssl rand -base64 32 | tr -d '+=/' | head -c 32
API_KEY=your-api-key-here
API_KEY_NAME=default

# Optional: Disable authentication (not recommended for production)
AUTH_ENABLED=true

# ===========================================
# Claude API Configuration (required)
# ===========================================

CLAUDE_API_KEY=sk-ant-your-api-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514

# ===========================================
# Source Control Platform
# ===========================================

# Options: GitHub or AzureDevOps
SCM_PLATFORM=GitHub

# GitHub Configuration (required if SCM_PLATFORM=GitHub)
GITHUB_OWNER=your-username-or-org
GITHUB_TOKEN=ghp_your_personal_access_token
GITHUB_VISIBILITY=Private

# Azure DevOps Configuration (required if SCM_PLATFORM=AzureDevOps)
AZURE_DEVOPS_ORG=https://dev.azure.com/your-org
AZURE_DEVOPS_PROJECT=your-project
AZURE_DEVOPS_PAT=your-personal-access-token

# ===========================================
# Common Configuration
# ===========================================

DEFAULT_BRANCH=main
GENERATE_CICD=true
